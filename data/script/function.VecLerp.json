{
  "name": "VecLerp",
  "arguments": [
    {
      "name": "a",
      "desc": "Vector",
      "optional": false,
      "type": "TVec"
    },
    {
      "name": "b",
      "desc": "Vector",
      "optional": false,
      "type": "TVec"
    },
    {
      "name": "t",
      "desc": "fraction (usually between 0.0 and 1.0)",
      "optional": false,
      "type": "number"
    }
  ],
  "returns": [
    {
      "name": "c",
      "desc": "Linearly interpolated vector between a and b, using t",
      "optional": false,
      "type": "TVec"
    }
  ],
  "examples": [
    [
      "function init()",
      "\tlocal a = Vec(2,0,0)",
      "\tlocal b = Vec(0,4,2)",
      "\tlocal t = 0.5",
      "\t",
      "\t--These two are equivalent",
      "\tlocal c1 = VecLerp(a, b, t)",
      "\tlocal c2 = VecAdd(VecScale(a, 1-t), VecScale(b, t))",
      "\t",
      "\t--c1 and c2 now equals {1, 2, 1}",
      "\tDebugPrint(\"c1\" .. VecStr(c1) .. \" == c2\" .. VecStr(c2))",
      "end"
    ]
  ],
  "description": [
    ""
  ]
}