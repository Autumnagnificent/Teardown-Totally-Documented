{
  "name": "GetBodyClosestPoint",
  "arguments": [
    {
      "name": "body",
      "desc": "Body handle",
      "optional": false,
      "type": "number"
    },
    {
      "name": "origin",
      "desc": "World space point",
      "optional": false,
      "type": "table"
    }
  ],
  "returns": [
    {
      "name": "hit",
      "desc": "True if a point was found",
      "optional": false,
      "type": "boolean"
    },
    {
      "name": "point",
      "desc": "World space closest point",
      "optional": false,
      "type": "table"
    },
    {
      "name": "normal",
      "desc": "World space normal at closest point",
      "optional": false,
      "type": "table"
    },
    {
      "name": "shape",
      "desc": "Handle to closest shape",
      "optional": false,
      "type": "number"
    }
  ],
  "examples": [
    [
      "local handle = 0",
      "function init()",
      "\thandle = FindBody(\"body\", true)",
      "end",
      "",
      "function tick()",
      "\tDebugCross(Vec(1, 0, 0))",
      "\tlocal hit, p, n, s = GetBodyClosestPoint(handle, Vec(1, 0, 0))",
      "\tif hit then",
      "\t\tDebugCross(p)",
      "\tend",
      "end"
    ]
  ],
  "description": [
    "This will return the closest point of a specific body"
  ]
}