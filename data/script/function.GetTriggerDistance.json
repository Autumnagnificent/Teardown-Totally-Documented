{
  "name": "GetTriggerDistance",
  "arguments": [
    {
      "name": "trigger",
      "desc": "Trigger handle",
      "optional": false,
      "type": "number"
    },
    {
      "name": "point",
      "desc": "Word space point as vector",
      "optional": false,
      "type": "table"
    }
  ],
  "returns": [
    {
      "name": "distance",
      "desc": "Positive if point is outside, negative if inside",
      "optional": false,
      "type": "number"
    }
  ],
  "examples": [
    [
      "local trigger = 0",
      "function init()",
      "\ttrigger = FindTrigger(\"toxic\")",
      "\tlocal p = Vec(0, 10, 0)",
      "\tlocal dist = GetTriggerDistance(trigger, p)",
      "\tDebugPrint(dist)",
      "end"
    ]
  ],
  "description": [
    "Get distance to the surface of trigger volume. Will return negative distance if inside."
  ]
}