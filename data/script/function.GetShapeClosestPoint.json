{
  "name": "GetShapeClosestPoint",
  "arguments": [
    {
      "name": "shape",
      "desc": "Shape handle",
      "optional": false,
      "type": "number"
    },
    {
      "name": "origin",
      "desc": "World space point",
      "optional": false,
      "type": "TVec"
    }
  ],
  "returns": [
    {
      "name": "hit",
      "desc": "True if a point was found",
      "optional": false,
      "type": "boolean"
    },
    {
      "name": "point",
      "desc": "World space closest point",
      "optional": false,
      "type": "TVec"
    },
    {
      "name": "normal",
      "desc": "World space normal at closest point",
      "optional": false,
      "type": "TVec"
    }
  ],
  "examples": [
    [
      "local shape = 0",
      "function init()",
      "\tshape = FindShape(\"shape\", true)",
      "end",
      "",
      "function tick()",
      "\tDebugCross(Vec(1, 0, 0))",
      "\tlocal hit, p, n, s = GetShapeClosestPoint(shape, Vec(1, 0, 0))",
      "\tif hit then",
      "\t\tDebugCross(p)",
      "\tend",
      "end"
    ]
  ],
  "description": [
    "This will return the closest point of a specific shape"
  ]
}