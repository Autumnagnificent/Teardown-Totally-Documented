{
  "name": "GetJointShapes",
  "arguments": [
    {
      "name": "joint",
      "desc": "Joint handle",
      "optional": false,
      "type": "number"
    }
  ],
  "returns": [
    {
      "name": "shapes",
      "desc": "Shape handles",
      "optional": false,
      "type": "number"
    }
  ],
  "examples": [
    [
      "local mainBody",
      "local shapes",
      "local joint",
      "function init()",
      "\tjoint = FindJoint(\"joint\")",
      "\tmainBody = GetVehicleBody(FindVehicle(\"vehicle\"))",
      "\tshapes = GetJointShapes(joint)",
      "end",
      "",
      "function tick()",
      "\t-- Check to see if joint chain is still connected to vehicle main body",
      "\t-- If not then disable motors",
      "",
      "\tlocal connected = false",
      "\tfor i=1,#shapes do",
      "\t",
      "\t\tlocal body = GetShapeBody(shapes[i])",
      "\t",
      "\t\tif body == mainBody then",
      "\t\t\tconnected = true",
      "\t\tend",
      "\t",
      "\tend",
      "\t",
      "\tif connected then",
      "\t\tSetJointMotor(joint, 0.5)",
      "\telse",
      "\t\tSetJointMotor(joint, 0.0)",
      "\tend",
      "end"
    ]
  ],
  "description": [
    "Get shapes connected to the joint."
  ]
}