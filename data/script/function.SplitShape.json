{
  "name": "SplitShape",
  "arguments": [
    {
      "name": "shape",
      "desc": "Source handle",
      "optional": false,
      "type": "number"
    },
    {
      "name": "removeResidual",
      "desc": "Remove residual shapes (default false)",
      "optional": false,
      "type": "bool"
    }
  ],
  "returns": [
