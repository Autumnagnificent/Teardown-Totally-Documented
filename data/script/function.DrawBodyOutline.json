{
  "name": "DrawBodyOutline",
  "arguments": [
    {
      "name": "handle",
      "desc": "Body handle",
      "optional": false,
      "type": "number"
    },
    {
      "name": "r",
      "desc": "Red",
      "optional": true,
      "type": "number"
    },
    {
      "name": "g",
      "desc": "Green",
      "optional": true,
      "type": "number"
    },
    {
      "name": "b",
      "desc": "Blue",
      "optional": true,
      "type": "number"
    },
    {
      "name": "a",
      "desc": "Alpha",
      "optional": true,
      "type": "number"
    }
  ],
  "returns": [],
  "examples": [
    [
      "local handle = 0",
      "function init()",
      "\thandle = FindBody(\"body\", true)",
      "end",
      "",
      "function tick()",
      "\tif InputDown(\"interact\") then",
      "\t\t--Draw white outline at 50% transparency",
      "\t\tDrawBodyOutline(handle, 0.5)",
      "\telse",
      "\t\t--Draw green outline, fully opaque",
      "\t\tDrawBodyOutline(handle, 0, 1, 0, 1)",
      "\tend",
      "end"
    ]
  ],
  "description": [
    "Render next frame with an outline around specified body.",
    "If no color is given, a white outline will be drawn."
  ]
}