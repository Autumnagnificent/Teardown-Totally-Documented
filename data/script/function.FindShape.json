{
  "name": "FindShape",
  "arguments": [
    {
      "name": "tag",
      "desc": "Tag name",
      "optional": true,
      "type": "string"
    },
    {
      "name": "global",
      "desc": "Search in entire scene",
      "optional": true,
      "type": "boolean"
    }
  ],
  "returns": [
    {
      "name": "handle",
      "desc": "Handle to first shape with specified tag or zero if not found",
      "optional": false,
      "type": "number"
    }
  ],
  "examples": [
    [
      "local target = 0",
      "local escape = 0",
      "function init()",
      "\t--Search for a shape tagged \"mybox\" in script scope",
      "\ttarget = FindShape(\"mybox\")",
      "",
      "\t--Search for a shape tagged \"laserturret\" in entire scene",
      "\tescape = FindShape(\"laserturret\", true)",
      "end",
      "",
      "function tick()",
      "\tDebugCross(GetShapeWorldTransform(target).pos)",
      "\tDebugCross(GetShapeWorldTransform(escape).pos)",
      "end"
    ]
  ],
  "description": [
    ""
  ]
}