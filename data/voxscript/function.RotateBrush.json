{
  "name": "RotateBrush",
  "arguments": [
    {
      "name": "brush",
      "desc": "Brush handle",
      "optional": false,
      "type": "number"
    },
    {
      "name": "axis",
      "desc": "\"x\", \"y\" or \"z\"",
      "optional": false,
      "type": "string"
    },
    {
      "name": "angle",
      "desc": "Rotation angle in degrees",
      "optional": false,
      "type": "number"
    }
  ],
  "returns": [],
  "examples": [
    [
      "function init()",
      "\tlocal brush = CreateBrush(\"brush/white.vox\")",
      "\tlocal brick = CreateMaterial(\"masonry\", 0.6, 0.5, 0.3, 0, 0.1, 0, 0)",
      "\t--Draw box with brush rotated 90 degrees around y axis",
      "\tRotateBrush(brush, \"y\", 90)",
      "\tMaterial(brick)",
      "\tVox(0,0,0)",
      "\tBox(0, 0, 0, 10, 10, 10)",
      "end"
    ]
  ],
  "description": [
    "Apply a rotation transformation on the brush"
  ]
}