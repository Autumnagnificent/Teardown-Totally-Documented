  "returns": [],
  "examples": [
    [
      "function init()",
      "    Vox(0,0,0)",
      "    local brush = CreateBrush(\"brush/white.vox\")",
      "    local brick = CreateMaterial(\"masonry\", 0.6, 0.5, 0.3, 0, 0.1, 0, 0)",
      "    Material(brick)",
      "    LoadImage(\"MOD/heightmap.png\")",
      "\tHeightmap(0, 0, 100, 100, 255)",
      "end"
    ]
